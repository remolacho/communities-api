{
    "[ruby]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.suggestSelection": "first",
        "editor.acceptSuggestionOnEnter": "on",
        "editor.definitionLinkOpensInPeek": false
    },
    "workbench.colorTheme": "Dracula Theme",
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "editor.tokenColorCustomizations": {
        "[One Dark Pro]": {
            "textMateRules": [
                {
                    "scope": ["source.ruby"],
                    "settings": {
                        "foreground": "#A9B7C6"
                    }
                },
                {
                    "scope": ["keyword.control.ruby"],
                    "settings": {
                        "foreground": "#CC7832",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": ["constant.language.ruby"],
                    "settings": {
                        "foreground": "#6897BB"
                    }
                },
                {
                    "scope": ["string.quoted.double.ruby", "string.quoted.single.ruby"],
                    "settings": {
                        "foreground": "#6A8759"
                    }
                },
                {
                    "scope": ["constant.numeric.ruby"],
                    "settings": {
                        "foreground": "#6897BB"
                    }
                },
                {
                    "scope": ["variable.other.ruby"],
                    "settings": {
                        "foreground": "#9876AA"
                    }
                }
            ]
        }
    },
    "editor.fontSize": 14,
    "editor.lineHeight": 1.5,
    "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "files.associations": {
        "*.erb": "erb",
        "*.rb": "ruby"
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.multiCursorModifier": "alt",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "selection",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.gotoLocation.multiple": "goto",
    "editor.links": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 300,
    "ruby.useBundler": true,
    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        }
    },
    "ruby.locate": {
        "include": ["app", "lib", "test", "spec"],
        "exclude": ["tmp", "log", "vendor"],
        "strictMode": false
    },
    "ruby.intellisense": "rubyLocate",
    "ruby.useLanguageServer": false,
    "ruby.interpreter.commandPath": "ruby",
    "search.exclude": {
        "**/tmp": true,
        "**/log": true,
        "**/vendor": true
    },
    "search.followSymlinks": false,
    "search.useIgnoreFiles": true,
    "workbench.editor.enablePreview": false,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "references.preferredLocation": "view",
    "search.smartCase": true,
    "search.useReplacePreview": true,
    "search.searchOnType": true,
    "ruby.codeCompletion": "rcodetools",
    "ruby.highlight": {
        "methods": true,
        "variables": true,
        "functions": true,
        "classes": true,
        "modules": true
    },
    "workbench.iconTheme": "material-icon-theme",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.renderLineHighlight": "all",
    "editor.occurrencesHighlight": true,
    "editor.selectionHighlight": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,
    "editor.minimap.showSlider": "always"
}
